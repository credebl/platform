{
    "family": "DEV_ISSUANCE_SERVICE_TASKDEFINITION",
    "containerDefinitions": [
        {
            "name": "issuance",
            "image": "%REPOSITORY_URI%:ISSUANCE_v_%BUILD_NUMBER%",
            "cpu": 256,
            "memory": 512,
            "portMappings": [],
            "essential": true,
            "environment": [],
            "environmentFiles": [
                {
                    "value": "${S3_ARN}",
                    "type": "s3"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "uploadedFiles",
                    "containerPath": "/app/uploadedFiles",
                    "readOnly": false
                }
            ],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/DEV_ISSUANCE_SERVICE_TASKDEFINITION",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::${ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
   "volumes": [
        {
            "name": "uploadedFiles",
            "efsVolumeConfiguration": {
                "fileSystemId": "${EFS}",
                "rootDirectory": "/",
                "transitEncryption": "ENABLED",
                "authorizationConfig": {
                    "accessPointId": "${UPLOADFILES_ACCESS_POINT}",
                    "iam": "DISABLED"
                }
            }
        }
    ]
}
