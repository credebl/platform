    "@nestjs/swagger": "^7.1.6",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.1.3",
    "@prisma/client": "^5.1.1",
    "@sendgrid/mail": "^7.7.0",
    "@supabase/supabase-js": "^2.32.0",
    "@types/async-retry": "^1.4.5",
    "@types/crypto-js": "^4.1.1",
