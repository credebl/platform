{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "target": "es2020",
    "sourceMap": true,
    // "outDir": "./dist/apps/",
    "baseUrl": ".",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    // "esModuleInterop": true,
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "scripts", "resources"]
}