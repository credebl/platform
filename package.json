    "bcrypt": "^5.1.0",
    "blob-stream": "^0.1.3",
    "body-parser": "^1.20.1",
    "buffer": "^6.0.3",
    "bull": "^4.11.4",
    "cache-manager": "^5.2.4",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.1.1",
    "crypto-random-string": "^5.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs": "0.0.1-security",
    "generate-password": "^1.7.0",
    "helmet": "^7.0.0",
    "html-pdf": "^3.0.1",
    "html-to-image": "^1.11.11",
