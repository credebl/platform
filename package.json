{
  "name": "credebl-platform",
  "version": "2.0.0",
  "description": "CREDEBL SSI Platform API Gateway",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:all": "rimraf dist && nest build api-gateway && nest build agent-provisioning && nest build agent-service && nest build connection && nest build cloud-wallet && nest build geo-location && nest build issuance && nest build ledger && nest build notification && nest build organization && nest build user && nest build utility && nest build verification && nest build webhook",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "npx prisma migrate deploy --schema=./libs/prisma-service/prisma/schema.prisma & nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "prisma:generate": "npx prisma generate",
    "generate": "npx prisma generate --schema=node_modules/@credebl/prisma-service/prisma/schema.prisma",
    "prepare": "husky install"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
